{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "baseUrl": "./src",
        "paths": {
            "@commands/*": [
                "commands/*"
            ],
            "@events/*": [
                "events/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@settings/*": [
                "settings/*"
            ],
            "@templates/*": [
                "templates/*"
            ],
            "@mytypes/*": [
                "types/*"
            ],
            "@index": [
                "index"
            ]
        },
    },
    "files": [
        "src/index.ts"
    ],
    "include": [
        "./**/*.ts",
        "./**/*.ts.template",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "ts-node": {
        // Do not forget to `npm i -D tsconfig-paths`
        "require": [
            "tsconfig-paths/register"
        ]
    }
}